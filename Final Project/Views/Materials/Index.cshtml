@model IEnumerable<Materials>
<div>
    <h2>Materials</h2>
    <style>

        body {
            background-image: url('https://images.unsplash.com/photo-1586074299757-dc655f18518c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80');
            background-repeat: repeat;
            background-size: auto;
            color: white;
        }
    </style>

    @using (Html.BeginForm("Search", "Materials", FormMethod.Get))
    {
        <p>
            Find by name: @Html.TextBox("searchString")
            <input type="submit" value="Search" />
        </p>
    }
    <table class="table">
        <tr>
            <th>Category ID</th>
            <th>Name</th>
            <th>Residential pick up</th>
            <th>Drop off</th>
            <th>Instructions</th>

        </tr>

        @foreach (var materials in Model)
        {
            <tr>
                <td><a href=/Materials/ViewMaterial/@materials.id_materials>@materials.id_materials</a></td>
                <td>@materials.name</td>
                <td>@materials.residential_pickup</td>
                <td>@materials.drop_off</td>
                <td>@materials.instructions</td>
            </tr>
        }
    </table>
</div>

